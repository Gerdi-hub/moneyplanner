<h1>Your Incomes</h1>

<table>
  <thead>
  <tr>
    <th>Amount</th>
    <th>Description</th>
    <th>Date</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @incomes.each do |income| %>
    <tr>
      <td><%= income.amount %></td>
      <td><%= income.description %></td>
      <td><%= income.date %></td>
      <td>
        <%= button_to 'Edit', edit_income_path(income) %>
        <%= button_to 'Delete', income_path(income), method: :delete, data: { confirm: 'Are you sure you want to delete this income?' } %>

      </td>
    </tr>
  <% end %>git
  </tbody>
</table>

<%= link_to 'Add Income', new_income_path %>
