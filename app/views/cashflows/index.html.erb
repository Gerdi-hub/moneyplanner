<h1>Your Incomes</h1>

<table>
  <thead>
  <tr>
    <th>Amount</th>
    <th>Description</th>
    <th>Date</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @cashflows.each do |cashflow| %>
    <tr>
      <td><%= cashflow.amount %></td>
      <td><%= cashflow.description %></td>
      <td><%= cashflow.date %></td>
      <td>
        <%= button_to 'Edit', edit_cashflow_path(cashflow) %>
        <%= button_to 'Delete', cashflow_path(cashflow), method: :delete, data: { confirm: 'Are you sure you want to delete this cashflow?' } %>

      </td>
    </tr>
  <% end %>git
  </tbody>
</table>

<%= link_to 'Add Cashflow', new_cashflow_path %>
